        <DockPanel LastChildFill="True"
                   HorizontalAlignment="Stretch"
                   Grid.Column="1">
            <TextBlock>
                <Run Text="{Binding ExcelColumnName}" FontWeight="Bold" Background="{Binding Color}" />
                <Run Text="as" />
                <Run Text="{Binding FontName}" />
                <Run Text="{Binding FontSize}" />
                <Run Text="{Binding Baseline, StringFormat={}@{0:P0}}" FontStyle="Italic" />
            </TextBlock>
        </DockPanel>
        <DockPanel Grid.Column="2">
            <Button Command="{x:Static cmd:BibGenCommands.RemoveStripe}"
                    CommandParameter="{Binding}"
                    VerticalContentAlignment="Center"
                    Margin="0"
                    Background="Red"
                    BorderThickness="0"
                    UseLayoutRounding="True">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </Button.Resources>
                <Viewbox Width="10" 
                         HorizontalAlignment="Center"
                         Margin="3">
